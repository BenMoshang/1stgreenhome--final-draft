{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "auto",
  "htmlWhitespaceSensitivity": "css",
  "embeddedLanguageFormatting": "auto",
  "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": "*.svelte",
      "options": { "parser": "svelte" }
    },
    {
      "files": ["**/*.html", "**/*.htm"],
      "options": { "parser": "html" }
    },
    {
      "files": ["**/*.css", "**/*.scss", "**/*.less"],
      "options": { "parser": "css" }
    },
    {
      "files": ["**/*.js", "**/*.jsx", "**/*.mjs", "**/*.cjs"],
      "options": { "parser": "babel" }
    },
    {
      "files": ["**/*.ts", "**/*.tsx", "**/*.mts", "**/*.cts"],
      "options": { "parser": "typescript" }
    },
    {
      "files": ["**/*.json"],
      "options": { "parser": "json" }
    },
    {
      "files": ["**/*.md", "**/*.mdx"],
      "options": { "parser": "markdown" }
    },
    {
      "files": ["**/*.yml", "**/*.yaml"],
      "options": { "parser": "yaml" }
    }
  ]
}
