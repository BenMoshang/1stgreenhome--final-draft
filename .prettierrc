{
	"printWidth": 80,
	"tabWidth": 2,
	"useTabs": false,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"arrowParens": "always",
	"endOfLine": "lf",

	"htmlWhitespaceSensitivity": "css",

	"plugins": ["prettier-plugin-svelte"],

	"overrides": [
		{
			"files": "*.svelte",
			"options": { "parser": "svelte" }
		},
		{
			"files": ["**/*.html", "**/*.htm"],
			"options": { "parser": "html" }
		},
		{
			"files": ["**/*.css", "**/*.scss", "**/*.less"],
			"options": { "parser": "css" }
		},
	
		{
			"files": ["**/*.js", "**/*.mjs", "**/*.cjs"],
			"options": { "parser": "babel" }
		},
		{
			"files": ["**/*.ts", "**/*.mts", "**/*.cts"],
			"options": { "parser": "typescript" }
		},
		{
			"files": ["**/*.jsx"],
			"options": { "parser": "babel" }
		},
		{
			"files": ["**/*.tsx"],
			"options": { "parser": "typescript" }
		}
	]
}
